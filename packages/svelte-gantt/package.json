{
    "name": "svelte-gantt",
    "description": "Interactive JavaScript Gantt chart/resource booking component",
    "version": "4.4.0",
    "author": "Ante Novokmet <ante.je.zakon@gmail.com>",
    "type": "module",
    "scripts": {
        "build": "rollup -c",
        "autobuild": "rollup -c -w",
        "demo:dev": "cd demo && npm run dev",
        "dev": "run-p autobuild demo:dev",
        "validate": "svelte-check",
        "demokit:dev": "npm --prefix demo-sveltekit run dev",
        "package": "node tools/build && npm run build-package",
        "build-package": "svelte-package -i src -o dist/svelte",
        "lint": "eslint .",
        "format": "prettier --plugin-search-dir . --write . --plugin prettier-plugin-svelte"
    },
    "module": "./src/index.ts",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "default": "./src/index.ts",
            "svelte": "./src/index.ts"
        },
        "./svelte": {
            "import": "./src/index.ts",
            "default": "./src/index.ts",
            "svelte": "./src/index.ts"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ANovokmet/svelte-gantt.git"
    },
    "bugs": {
        "url": "https://github.com/ANovokmet/svelte-gantt/issues"
    },
    "keywords": [
        "svelte",
        "gantt",
        "booking",
        "svelte-gantt",
        "js-gantt",
        "javascript-gantt",
        "react-gantt",
        "angular-gantt",
        "vue-gantt",
        "drag-n-drop"
    ],
    "peerDependencies": {
        "moment": "^2.22.2"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^15.2.1",
        "@rollup/plugin-typescript": "^11.1.4",
        "@sveltejs/package": "^2.2.2",
        "@tsconfig/svelte": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "del": "^5.1.0",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-svelte": "^2.34.0",
        "npm-run-all": "^4.1.3",
        "postcss": "^8.3.11",
        "prettier": "^3.0.3",
        "prettier-plugin-svelte": "^3.0.3",
        "rollup": "^2.36.1",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-postcss": "^4.0.1",
        "rollup-plugin-svelte": "^7.1.5",
        "rollup-plugin-uglify": "^3.0.0",
        "svelte": "^4.2.1",
        "svelte-check": "^3.4.3",
        "svelte-preprocess": "^5.0.3",
        "tslib": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "sirv-cli": "^2.0.2"
    }
}
