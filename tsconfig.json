{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
		"sourceMap": true,
        "baseUrl": "./",
        // "rootDir": "src",
        "target": "ES2017",
        "module": "es6",
        "moduleResolution": "node",
        "types": [
            "svelte"
        ],
		"declaration": true,
		"declarationDir": "./dist",
		// "declarationDir": "./dist/types",
        "importsNotUsedAsValues": "remove",
        "isolatedModules": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}